<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <TextView
        android:id="@+id/textviewIDHDBan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID Hóa Đơn Bán"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="30dp"/>
    <TextView
        android:id="@+id/textviewIDKH"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Id Khách Hàng"
        android:textColor="@color/black"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/textviewNgayDat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ngày Đặt"
        android:textColor="@color/black"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/textviewGhiChu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ghi chu"
        android:textColor="@color/black"
        android:textSize="20dp"/>
    <TextView
        android:id="@+id/textviewTongTien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng Tiền"
        android:textColor="@color/black"
        android:textSize="25dp"/>
    <LinearLayout
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xem chi tiết"
            android:id="@+id/btXemChiTiet"/>
        <Button
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Đơn Đang HT"
            android:id="@+id/btHoanThanh"
            android:backgroundTint="#D80C0C"
            />
    </LinearLayout>




</LinearLayout>